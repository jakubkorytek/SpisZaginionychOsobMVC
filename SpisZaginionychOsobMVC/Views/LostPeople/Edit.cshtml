@model SpisZaginionychOsobMVC.Models.LostPerson

@{
    ViewBag.Title = "Edit";
}

<h2>Edycja osoby zaginonej</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
